<ServerManagerConfiguration>
    <ProxyGroup name="filters">
        <SourceProxy name="CustomFilter" class="vtkGlobeFilter" label="My Custom Filter">
            <Documentation
                long_help="Create point attribute array by projecting points onto an elevation vector."
                short_help="Create a point array representing elevation.">
            </Documentation>
            <InputProperty
                name="Input"
                command="SetInputConnection">
                <ProxyGroupDomain name="groups">
                    <Group name="sources"/>
                    <Group name="filters"/>
                </ProxyGroupDomain>
                <DataTypeDomain name="input_type">
                    <DataType value="vtkPolyData"/>
                </DataTypeDomain>
            </InputProperty>
            <Property name="reloadTheStuff"
            animateable="1"
            command="reloadStuff" />
        </SourceProxy>
        <SourceProxy name="SphericalToCartesianFilter" class="SphericalToCartesianFilter" label="Kronos Spherical to Cartesian">
            <Documentation
                long_help="This filter can convert GPS data (longitude/latitude/height) to cartesian coordinates in order to 'wrap' the data around a globe."
                short_help="Convert GPS-Data to cartesian coordinates">
            </Documentation>
            <InputProperty
                name="Input"
                command="SetInputConnection">
                <ProxyGroupDomain name="groups">
                    <Group name="sources"/>
                    <Group name="filters"/>
                </ProxyGroupDomain>
                <DataTypeDomain name="input_type">
                    <DataType value="vtkPointSet"/>
		    <DataType value="vtkImageData"/>
		    <DataType value="vtkRectilinearGrid"/>
                </DataTypeDomain>
            </InputProperty>
        </SourceProxy>
        <SourceProxy name="vtkTextureMapToPlane" class="vtkTextureMapToPlane" label="Texture to Map">
            <Documentation
                long_help="Create point attribute array by projecting points onto an elevation vector."
                short_help="Create a point array representing elevation.">
            </Documentation>
            <InputProperty
                name="Input"
                command="SetInputConnection">
                <ProxyGroupDomain name="groups">
                    <Group name="sources"/>
                    <Group name="filters"/>
                </ProxyGroupDomain>
                <DataTypeDomain name="input_type">
                    <DataType value="vtkDataSet"/>
                </DataTypeDomain>
            </InputProperty>
        </SourceProxy>
        <SourceProxy name="KronosFlowFilter" class="vtkFlowVisualisationFilter" label="Kronos Flow-Visualisation">
            <!-- Documentation shown... somewhere -->
            <Documentation
            long_help="Hello, this is my long help."
            short_help="Hello, this is my help." />
            
            <InputProperty
                name="Input"
                command="SetInputConnection">
                
                <!-- Acceptable groups as inputs -->
                <ProxyGroupDomain name="groups">
                    <Group name="sources"/>
                    <Group name="filters"/>
                </ProxyGroupDomain>
                
                <!-- (super)classes to accept via input -->
                <DataTypeDomain name="input_type">
                    <DataType value="vtkDataSet"/>
                </DataTypeDomain>
            </InputProperty>
            
            <!-- Initialize our filter-property for the visualization method. -->
            <IntVectorProperty
                name="VisualisationMethod"
                command="switchVisualisationMethod"
                label="Current Visualisation Method"
                number_of_elements="1"
                default_values="0">
                
                <!-- Make a combobox with selections. -->
                <EnumerationDomain name="enum">
                    <!-- Mapping using values matching the codefiles -->
                    <Entry value="0" text="Streamlines"/>
                    <Entry value="1" text="Pathlines"/>
                    <Entry value="2" text="LIC"/>
                </EnumerationDomain>
                
                <Documentation>
                    This is empty. Or maybe not. Just setting the visualisation method. Does nothing important for now.
                </Documentation>
            </IntVectorProperty>
        </SourceProxy>

    </ProxyGroup>
</ServerManagerConfiguration>
